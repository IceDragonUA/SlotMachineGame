<resources>

    <style name="SplashScreen" parent="@style/Theme.AppCompat">
        <item name="android:windowBackground">@drawable/app_banner</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/progress_height</item>
    </style>

    <style name="ProgressText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/progress_text_size</item>
        <item name="android:paddingStart">@dimen/bet_text_padding_lf</item>
        <item name="android:paddingEnd">@dimen/bet_text_padding_lf</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BetText">
        <item name="android:layout_width">@dimen/default_width</item>
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:textSize">@dimen/bet_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="BetButton">
        <item name="android:layout_width">@dimen/default_width</item>
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

</resources>
